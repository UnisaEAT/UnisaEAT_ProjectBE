      "**/controller/controller_ordine.js",
      "**/controller/controller_statistiche.js",
      "**/controller/controller_conversazione.js"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UnisaEAT/UnisaEAT_ProjectBE.git"
  },
